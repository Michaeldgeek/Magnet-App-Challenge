<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:paddingRight="15dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_thumb"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@android:color/transparent"
        android:padding="10dp"
        android:src="@drawable/michael" />

    <View
        android:id="@+id/invisible_for_badge_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/profile_thumb"
        android:layout_alignLeft="@+id/profile_thumb"
        android:layout_alignRight="@+id/profile_thumb"
        android:layout_alignTop="@+id/profile_thumb" />

    <RelativeLayout
        android:id="@+id/username_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/profile_thumb"
        android:paddingTop="10dp"

        >

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/date"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Username"
            android:textColor="#212121"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="2015 SEP 28, Mon"
            android:textColor="@color/md_blue_grey_300"
            android:textSize="12sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/message_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username_relative_layout"
        android:layout_toRightOf="@+id/profile_thumb">

        <ImageView
            android:id="@+id/delivered_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:src="@drawable/message_got_read_receipt_from_target" />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/circle_text"
            android:layout_toRightOf="@+id/delivered_icon"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Message"
            android:textColor="#A2A2A2"
            android:textSize="16sp"

            />

        <TextView
            android:id="@+id/circle_text"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:background="@drawable/circle_text"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/md_white_1000"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="77dp"
        android:layout_marginTop="67dp"
        android:background="#E6E6E6" />
</RelativeLayout>